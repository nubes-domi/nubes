<div class="d-flex justify-center align-center h-100vh">
  <div class="signin-form flex-grow">
    <h1 class="text-center mb-2">Sign in</h1>

    <%#
      TODO
      If the Sign in was requested by an OIDC app, add:
      <div>to continue to app</div>
    %>

    <%= form_with url: signin_path do |f| %>
      <%= f.hidden_field :continue, value: params[:continue] %>
      <div class="mb-2">
        <label for="identifier">Username or email</label>
        <%= render(TextFieldComponent.new(
          name: :identifier,
          size: :lg,
          required: true, autofocus: true,
          error: flash[:errors]&.dig("identifier"),
          autocapitalize: "off"
        )) %>
      </div>
      <div class="text-right">
        <button type="submit" style="width: 100%" class="btn btn--lg btn--primary">Continue</button>
      </div>
    <% end %>
  </div>
</div>