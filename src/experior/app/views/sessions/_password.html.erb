<div class="mb-2">
  <label for="password">Password</label>
  <%= render(TextFieldComponent.new(
    name: :password,
    type: :password,
    size: :lg,
    required: true, autofocus: true,
    error: flash[:errors]&.dig("password")
  )) %>
</div>
<div class="text-right">
  <button type="submit" style="width: 100%" class="btn btn--lg btn--primary">Continue</button>
</div>